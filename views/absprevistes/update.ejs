<!DOCTYPE html>
<html lang="en">

<head>
	<%- include('../partials/head'); %>
</head>

<body class="container">
	<header>
		<%- include('../partials/header'); %>
	</header>
	<main>
		<div class="card mt-4">
			<div class="card-header">
				<h5 class="card-title">Edita Absencia prevista</h5>
			</div>
			<div class="card-body">
				<form method="POST" action="/absprevistes/update/<%= absprevista._id %>">
					<div class="form-group">
						<label for="data_absprevista">Data abs√®ncia</label>
						<input type="date" name="data_absprevista" class="form-control">
						<label for="motiu_abs">Motiu absencia</label>
						<textarea name="motiu_abs" class="form-control"></textarea>
					</div>
					<button type="submit" class="btn btn-primary">Save
					</button>
					<a class="btn btn-danger" href="/absprevistes/delete/<%= absprevista._id %>"
						role="button">Delete</a>
				</form>
				<% if (typeof error !=="undefined" ) { %>
					<div class="alert alert-primary mt-2" role="alert">
						<p>
							<%= error %>
						</p>
					</div>
					<% } %>
						<% if (typeof message !=="undefined" ) { %>
							<div class="alert alert-primary mt-2" role="alert">
								<p>
									<%= message %>
								</p>
							</div>
					<% } %>
			</div>
		</div>
	</main>
	<footer>
		<%- include('../partials/footer'); %>
	</footer>
</body>

</html>