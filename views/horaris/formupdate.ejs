<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">
    <header>
        <%- include('../partials/header'); %>
    </header>
    <main>
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title">Editar horari</h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/horaris/update/">
                    <div class="form-group">

                        <label for="cars">Choose a car:</label>

                        <select name="cars" id="cars">
                            <% list.forEach( function(horari) { %>
                                <option value="<%= horari.id %>">Dia: <%= horari.dia %> Hora: <%= horari.hora %></option>
							<% }); %>
                        </select>

                        <br>
                        <label for="name">Dia</label>
                        <input type="text" name="dia" class="form-control" value="">
                        <label for="name">Hora</label>
                        <input type="text" name="hora" class="form-control">
                        <label for="name">Materia</label>
                        <input type="text" name="materia" class="form-control">
                        <label for="name">Aula</label>
                        <input type="text" name="aula" class="form-control">
                        <label for="name">Grup</label>
                        <input type="text" name="grup" class="form-control">
                        <label for="name">Professor</label>
                        <input type="text" name="professor" class="form-control">
                        
                    </div>
                    <button class="btn btn-primary" type="submit">Desar</button>
                    <a class="btn btn-danger" href="/horaris/delete/" role="button">Esborrar</a>
                </form>
                <% if (typeof error !=="undefined" ) { %>
                    <div class="alert alert-primary mt-2" role="alert">
                        <p>
                            <%= error %>
                        </p>
                    </div>
                    <% } %>
                        <% if (typeof message !=="undefined" ) { %>
                            <div class="alert alert-primary mt-2" role="alert">
                                <p>
                                    <%= message %>
                                </p>
                            </div>
                            <% } %>
            </div>
        </div>
    </main>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>

</html>