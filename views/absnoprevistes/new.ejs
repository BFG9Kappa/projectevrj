<!DOCTYPE html>
<html lang="en">
<head>
	<%- include('../partials/head'); %>
</head>
<body class="container">
	<header>
		<%- include('../partials/header'); %>
		<script>
			document.addEventListener("DOMContentLoaded", function() {
			  document.getElementById("data_absnoprevista").valueAsDate = new Date();
			});
		  </script>
	</header>
	<main>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.min.js"></script>
		<script>
				function genpdf() {

					// Crear un nou objecte de document jsPDF
					var doc = new jsPDF();

					// Obtenir els valors dels camps del formulari pel name
					var data_absnoprevista = document.getElementsByName("data_absnoprevista")[0].value;
					var hores_ausencia = document.getElementsByName("hores_ausencia")[0].value;
					var motiu_abs = document.getElementsByName("motiu_abs")[0].value;

					// Agregar text al documento PDF
					doc.text('Data absència no prevista: ' + data_absnoprevista, 10, 20);
					doc.text('Hores ausència: ' + hores_ausencia, 10, 30);
					doc.text('Motiu absència: ' + motiu_abs, 10, 40);
					doc.addPage();

					// Guardar l'arxiu PDF
					doc.save('absencia_no_prevista.pdf');
				};

		</script>
		<div class="card mt-2">
			<div class="card-header">
				<h5 class="card-title">Afegir absència no prevista</h5>
			</div>
			<div class="card-body">
				<a href="/absnoprevistes" class="btn btn-primary">Tornar</a>
				<form method="POST" action="/absnoprevistes/create">
					<div class="form-group">
						<label for="name">Data absència no prevista</label>
						<input type="date" name="data_absnoprevista" id="data_absnoprevista" class="form-control">

						<label for="name">Hores ausencia</label>
						<input type="number" name="hores_ausencia" class="form-control">

						<label for="name">Motiu absencia</label>
						<textarea name="motiu_abs" class="form-control"></textarea>

						<label for="name">Document justificatiu</label>
						<input type="file" name="document_justificatiu" id="document_justificatiu"class="form-control">


					</div>
					<button type="submit" class="btn btn-primary">Desar</button>
					<button onclick="genpdf()" class="btn btn-primary">Generar PDF</button>

			</div>
			</form>
			<% if (typeof errors !== "undefined") { %>
				<div class="alert alert-danger mt-2" role="alert">
					<% errors.forEach(function(error) { %>
						<p><%= error.msg %></p>
					<% }) %>
				</div>
			<% } %>
		</div>
	</main>
	<footer>
		<%- include('../partials/footer'); %>
	</footer>
</body>
</html>
