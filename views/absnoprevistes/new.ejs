<!DOCTYPE html>
<html lang="en">
<head>
	<%- include('../partials/head'); %>
	<script>
				function setDefaultDate() {
				const now = new Date();
				const day = now.getDate().toString().padStart(2, '0');
				const month = (now.getMonth() + 1).toString().padStart(2, '0');
				const year = now.getFullYear().toString();
				const today = `${year}-${month}-${day}`;

	 		document.getElementById('data_actual').value = today;
			}

			window.onload = function() {

  				setDefaultDate();
}
	</script>

</head>
<body class="container">
	<header>
		<%- include('../partials/header'); %>
	</header>
	<main>
		<div class="card mt-2">
			<div class="card-header">
				<h5 class="card-title">Afegir absència no prevista</h5>
			</div>
			<div class="card-body">
				<a href="/absnoprevistes" class="btn btn-primary">Tornar</a>
				<form method="POST" action="/absnoprevistes/create">
					<div class="form-group">

						<label for="name">La data de l'absència no prevista serà l'actual</label>
				<input type="hidden" name="data_absnoprevista" class="form-control" id="data_actual">
				<br>

						<label for="name">Hores ausencia</label>
						<input type="number" name="hores_ausencia" class="form-control">

						<label for="name">Motiu absencia</label>
						<textarea name="motiu_abs" class="form-control"></textarea>

						<label for="name">Document justificatiu</label>
						<input type="file" name="document_justificatiu" class="form-control">

						<label for="name">Fecha de vencimiento</label>
						<input type="text" name="fechaVencimiento" id="fechaVencimiento"class="form-control" value=""disabled>


					</div>
					<button type="submit" class="btn btn-primary">Desar</button>
			</div>
			</form>
			<% if (typeof errors !== "undefined") { %>
				<div class="alert alert-danger mt-2" role="alert">
					<% errors.forEach(function(error) { %>
						<p><%= error.msg %></p>
					<% }) %>
				</div>
			<% } %>
		</div>
	</main>
	<footer>
		<%- include('../partials/footer'); %>
	</footer>
</body>
</html>
