<!DOCTYPE html>
<html lang="en">

<head>
	<%- include('../partials/head'); %>
</head>

<body class="container">
	<header>
		<%- include('../partials/header'); %>
	</header>
	<main>
		<div class="card mt-4">
			<div class="card-header">
				<h5 class="card-title">Editar sortida curricular</h5>
			</div>
			<div class="card-body">
				<form method="POST" action="/sortidescurriculars/update/<%= sortidacurricular._id %>">
					<div class="form-group">
						<label for="data_sortida">Data sortida curricular</label>
						<input type="date" id="data_sortida" name="data_sortida" class="form-control" value="<%= sortidacurricular.data_sortida.toISOString().slice(0, 10) %>">

						<label for="lloc">Lloc de sortida</label>
						<input type="text" name="lloc" class="form-control" value="<%= sortidacurricular.lloc %>">

						<label for="ruta">Ruta</label>
						<input type="text" name="ruta" class="form-control" value="<%= sortidacurricular.ruta %>">

						<label for="objectius">Objectius</label>
						<input type="text" name="objectius" class="form-control" value="<%= sortidacurricular.objectius %>">

						<label for="grups">Grups</label>
						<input type="text" name="grups" class="form-control" value="<%= sortidacurricular.grups %>">

						<label for="professors">Professors</label>
						<input type="text" name="professors" class="form-control" value="<%= sortidacurricular.professors %>">

						<label class="form-label" for="horaInici">Hora inici</label>
						<br>
							<select class="form-select" id="horaInici" name="horaInici" value="<%= sortidacurricular.hora_inici %>">
                            <optgroup label="Diurn">
                                <option >08:00</option>
                                <option >09:00</option>
                                <option >10:00</option>
                                <option >11:00</option>
																<option >11:30</option>
                                <option >12:30</option>
                                <option >13:30</option>
                            </optgroup>
                            <optgroup label="Nocturn">
                                <option >15:00</option>
                                <option >16:00</option>
                                <option >17:00</option>
                                <option >18:30</option>
                                <option >19:30</option>
                                <option >20:30</option>
                            </optgroup>
                        </select>
												<br>
												<br>

							<label class="form-label" for="horaArribada">Hora arribada</label>
							<br>
							<select class="form-select" id="horaArribada" name="horaArribada" value="<%= sortidacurricular.hora_arribada %>">
                            <optgroup label="Diurn">
                                <option >08:00</option>
                                <option >09:00</option>
                                <option >10:00</option>
																<option >11:00</option>
                                <option >11:30</option>
                                <option >12:30</option>
                                <option >13:30</option>
                            </optgroup>
                            <optgroup label="Nocturn">
                                <option >15:00</option>
                                <option >16:00</option>
                                <option >17:00</option>
																<option >18:00</option>
                                <option >18:30</option>
                                <option >19:30</option>
                                <option >20:30</option>
                            </optgroup>
                        </select>
												<br>
												<br>

							<label class="form-label" for="Estat">Estat</label>
							<br>
							<select class="form-select" id="Estat" name="Estat" value="<%= sortidacurricular.estat %>">
                                <option >Proposada</option>
                                <option >Refusada</option>
                                <option >AnulÂ·lada</option>
                                <option >Aprovada</option>
							</select>
						</div>
						<button type="submit" class="btn btn-primary">Desar</button>
					<a class="btn btn-danger" href="/sortidescurriculars/delete/<%= sortidacurricular._id %>"
						role="button">Esborrar</a>
					</div>

				</form>
				<% if (typeof error !=="undefined" ) { %>
					<div class="alert alert-primary mt-2" role="alert">
						<p>
							<%= error %>
						</p>
					</div>
					<% } %>
						<% if (typeof message !=="undefined" ) { %>
							<div class="alert alert-primary mt-2" role="alert">
								<p>
									<%= message %>
								</p>
							</div>
							<% } %>
			</div>
		</div>
	</main>
	<footer>
		<%- include('../partials/footer'); %>
	</footer>
</body>

</html>
