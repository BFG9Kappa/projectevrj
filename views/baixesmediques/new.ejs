<!DOCTYPE html>
<html lang="en">
<head>
	<%- include('../partials/head'); %>
</head>
<body class="container">
	<header>
		<%- include('../partials/header'); %>
	</header>
	<main>
		<div class="card mt-2">
			<div class="card-header">
				<h5 class="card-title">Afegir baixa mèdica</h5>
			</div>
			<div class="card-body">
				<form method="POST" action="/baixesmediques/create">
					<div class="form-group">
						<label for="data_inicial_baixa">Data inical baixa mèdica</label>
						<input type="date" name="data_inicial_baixa" id="data_inicial_baixa"class="form-control">

						<label for="data_prevista_alta">Data prevista alta medica</label>
						<input type="date" name="data_prevista_alta" id="data_prevista_alta"class="form-control">

						<label for="name">Comentari</label>
						<textarea name="comentari" class="form-control"></textarea>

						<label for="name">Document justificatiu</label>
						<input type="file" name="document_justificatiu_medic" class="form-control">
					</div>
					<br>
					<button type="submit" class="btn btn-primary">Desar</button>
			</div>

			</form>
				<% if (typeof errors !== "undefined") { %>
					<div class="alert alert-danger mt-2" role="alert">
						<% errors.forEach(function(error) { %>
							<p><%= error.msg %></p>
						<% }) %>
					</div>
				<% } %>

		</div>
	</main>

	<footer>
		<%- include('../partials/footer'); %>
	</footer>

</body>

</html>
