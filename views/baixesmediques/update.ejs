<!DOCTYPE html>
<html lang="en">
<head>
	<%- include('../partials/head'); %>
</head>
<body class="container">
	<header>
		<%- include('../partials/header'); %>
	</header>
	<main>
		<div class="card mt-2">
			<div class="card-header">
				<h5 class="card-title">Edita Baixa medica</h5>
			</div>
			<div class="card-body">
				<form method="POST" action="/baixesmediques/update/<%= baixamedica._id %>">
					<div class="form-group">
						<label for="data_inicial_baixa">Data inicial baixa</label>
						<input type="text" name="data_inicial_baixa" class="form-control" value="<%= baixamedica.data_inicial_baixa %>">
						<label for="data_prevista_alta">Data prevista alta</label>
						<input type="text" name="data_inicial_baixa" class="form-control" value="<%= baixamedica.data_prevista_alta %>">
						<label for="comentari">Comentari</label>
						<input type="text" name="comentari" class="form-control" value="<%= baixamedica.comentari %>">
					</div>
					<button type="submit" class="btn btn-primary">Desar</button>
					<a class="btn btn-danger" href="/baixesmediques/delete/<%= baixamedica._id %>" role="button">Esborrar</a>
				</form>
				<% if (typeof error !=="undefined") { %>
					<div class="alert alert-primary mt-2" role="alert">
						<p><%= error %></p>
					</div>
					<% } %>
						<% if (typeof message !=="undefined" ) { %>
							<div class="alert alert-primary mt-2" role="alert">
								<p><%= message %></p>
							</div>
				<% } %>
			</div>
		</div>
	</main>
	<footer>
		<%- include('../partials/footer'); %>
	</footer>
</body>
</html>